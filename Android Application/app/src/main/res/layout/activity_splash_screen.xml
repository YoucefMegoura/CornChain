<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".views.SplashScreenActivity"
    android:id="@+id/splashScreen_RelativeLayout">


    <ImageView
        android:id="@+id/logo_cornchain_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/corn_chain_square" />

    <ImageView
        android:id="@+id/cornchain_text_ImageView"
        android:layout_width="305dp"
        android:layout_height="67dp"
        android:layout_below="@id/logo_cornchain_ImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/corn_chain_text_logo" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cornchain_text_ImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


</RelativeLayout>